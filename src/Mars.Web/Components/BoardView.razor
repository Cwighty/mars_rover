@inject Game game

<h3>Board View</h3>

<table border="1">
    @foreach (var row in Enumerable.Range(0, game.Board.Width))
    {
        <tr>
            @foreach(var col in Enumerable.Range(0, game.Board.Height))
            {
                var cell = game.Board[row, col];
                var summary = cell.Difficulty.Value.ToString();
                if(locations.ContainsKey((row, col)))
                {
                    summary += $" ({locations[(row,col)].Name})";
                }
                <td>
                @summary
            </td>
            }
        </tr>
    }
</table>
<button @onclick=refresh>Refresh</button>

@code {
    Dictionary<(int row, int col), Player> locations = new();
    void refresh()
    {
        locations.Clear();
        foreach(var item in game.Board.RoverLocations)
        {
            locations.Add((item.Value.Row, item.Value.Column), item.Key);
        }

        StateHasChanged();
    }
}
