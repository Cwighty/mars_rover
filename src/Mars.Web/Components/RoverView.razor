@inject GameManager gameManager


<img style=@($"position: absolute; bottom: {bottomPercent}%; left: {leftPercent}%; z-index: 100")
     src="/images/persevarance_side_128.png"
     alt="@PlayerName" />

@code {
    [Parameter]
    public int Row { get; set; }

    [Parameter]
    public int Column{ get; set; }

    [Parameter]
    public string PlayerName{ get; set; }

    private double leftPercent, bottomPercent;

    protected override void OnParametersSet()
    {
        leftPercent = ((double)Row) / gameManager.Game.Board.Width * 100;
        bottomPercent = ((double)Column) / gameManager.Game.Board.Height * 100;
    }
}
